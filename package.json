{
  "name": "sentient-world",
  "private": true,
  "type": "module",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "check:code": "eslint",
    "check:code:all": "npm run check:code \".\"",
    "fix:code": "npm run check:code --fix",
    "fix:code:all": "npm run check:code:all --fix",
    "check:formatting": "prettier --check",
    "check:formatting:all": "npm run check:formatting \"**/*.{ts,js,md,yml,json}\"",
    "fix:formatting": "npm run check:formatting --write",
    "fix:formatting:all": "npm run check:formatting:all --write",
    "pre-commit": "lint-staged",
    "postinstall": "husky",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.37.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
