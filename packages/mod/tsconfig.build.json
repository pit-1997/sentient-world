{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "lib": ["ESNext"],
    "target": "esnext" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
    "module": "commonjs" /* Specify what module code is generated. */,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "paths": {
      "@sentient-world/engine": ["../engine/index.ts"],
      "@sentient-world/engine-gta-sa": ["../engine-gta-sa/index.ts"],
      "@sentient-world/event-emitter": ["../event-emitter/index.ts"],
      "@sentient-world/htn": ["../htn/index.ts"],
      "@sentient-world/moonloader": ["../moonloader/index.ts"],
      "@sentient-world/world": ["../world/index.ts"],
      "vkeys": ["../moonloader/vkeys.ts"]
    }
  },
  "tstl": {
    "luaBundle": "./dist/sentient-world.lua",
    "luaBundleEntry": "./main.ts",
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "noResolvePaths": ["vkeys"]
  },
  "include": ["./**/*.ts"]
}
